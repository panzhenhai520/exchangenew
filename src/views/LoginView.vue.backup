    startExchangeAnimation() {
      const exchangeSequence = [
        { left: 'R', right: 'H', nextLeft: 'F', nextRight: 'X' },
        { left: 'F', right: 'X', nextLeft: 'R', nextRight: 'H' },
        { left: 'R', right: 'H', nextLeft: 'F', nextRight: 'X' }
