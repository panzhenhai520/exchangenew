            console.log('=== å¼€å§‹ä¿å­˜æ•°æ®åˆ°localStorage ===');
            
            try {
              // æ¸…é™¤æ—§æ•°æ®
              localStorage.clear();
              console.log('âœ… æ—§æ•°æ®å·²æ¸…é™¤');
              
              // ä¿å­˜æ–°æ•°æ®
              localStorage.setItem('token', token);
